@import 'vars';
@import 'contact_form';
@import 'labeled_icons';
@import 'header';
@import 'footer';
@import 'fontello/fontello';
@import 'fontello_font_face_fix';
@import url(http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400);

// General
body {
  background: #fdfdfd;
  color: $black;
  font-size: 14pt;
  font-weight: 400;
  line-height: 1.7;
}

html, button, input, select, textarea,
.pure-g [class *= "pure-u"] {
  font-family: 'Source Sans Pro', sans-serif;
}

h1 {
  font-weight: 300;
  font-size: 180%;
  margin: 0;
  line-height: 1.3;
}
h1 strong { font-weight: 400; }

.pure-g > div {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding-right: 0.5em;
    padding-bottom: 0.2em;
}
a {
  color: #0071E2;
  color: #B34533;
}

section {
  margin-bottom: $margin-box*3;
}

section#greeting {
  margin-top: $margin-box*2;

  .avatar.image img {
    border-radius: 2000px;
    border: 0;
    display: inline-block;
    position: relative;
    width: 100%;
  }
}

.pure-button-primary {
  background: #B34533;
}

// Contact form
#message input[type="text"],
#message input[type="email"],
#message textarea {
  width: 100%;
}

// Colored text sections
.c-blue {
  color: $c-blue;
}