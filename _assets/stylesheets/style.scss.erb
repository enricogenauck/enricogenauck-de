@import 'vars';
@import 'contact_form';
@import 'labeled_icons';
@import url('http://fonts.googleapis.com/css?family=Source+Sans+Pro:200;400');

// General
body {
	background: #fdfdfd;
	color: $black;
	font-size: 14pt;
	line-height: 1.5;
}

h1 {
	font-weight: 200;
	font-size: 180%;
}
h1 strong { font-weight: 400; }

.pure-g > div {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    padding-right: 0.5em;
    padding-bottom: 0.2em;
}
a {
	color: #0071E2;
}

section {
	margin-bottom: $margin-box*3;
}

// Header
header {
	display: inline-block;
	font-size: 80%;
}
.pure-menu.pure-menu-open,
.pure-menu.pure-menu-horizontal li .pure-menu-children {
	background: #fdfdfd;
}
header ul { float: right; }

// Contact form
#message input[type="text"],
#message input[type="email"],
#message textarea {
	width: 100%;
}

// Colored text sections
.c-blue {
	color: $c-blue;
}